<Window x:Class="CMCS_WPF_Framework.LecturerClaimsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Claims" Height="400" Width="600" Background="#f7f7f7">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="My Claims"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <DataGrid x:Name="ClaimsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Height="250"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="*"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="*"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="← Back" Height="35" Width="120" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>

