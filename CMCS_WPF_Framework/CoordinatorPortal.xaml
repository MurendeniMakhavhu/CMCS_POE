<Window x:Class="CMCS_WPF_Framework.CoordinatorPortal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Portal" Height="500" Width="700" Background="#f9f9f9">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Coordinator Portal"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- View Claims -->
            <Button Content="View Pending Claims"
                    Height="40" Margin="5"
                    Click="ViewPendingClaims_Click"/>

            <!-- Claims Table -->
            <DataGrid x:Name="ClaimsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Height="250" Margin="0,10,0,10"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="100"/>
                    <DataGridTextColumn Header="Lecturer Name" Binding="{Binding LecturerName}" Width="200"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="100"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Approve"
                        Width="120" Height="35" Margin="10"
                        Click="Approve_Click"/>
                <Button Content="Reject"
                        Width="120" Height="35" Margin="10"
                        Click="Reject_Click"/>
            </StackPanel>

            <Button Content="← Back to Main Menu"
                    Height="40" Margin="20,40,20,0"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
