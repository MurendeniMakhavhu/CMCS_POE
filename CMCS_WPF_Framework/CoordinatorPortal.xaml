<Window x:Class="CMCS_WPF_Framework.CoordinatorPortal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Portal" Height="400" Width="600" Background="#f9f9f9">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Coordinator Portal"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button Content="View Pending Claims"
                    Height="40" Margin="5"/>
            <Button Content="Approve / Reject Claims"
                    Height="40" Margin="5"/>

            <Button Content="← Back to Main Menu"
                    Height="40" Margin="20,40,20,0"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
