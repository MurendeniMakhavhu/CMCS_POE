<Window x:Class="CMCS_WPF_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" 
        Height="350" Width="500">
    <Grid Background="#f0f0f0">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Contract Monthly Claim System" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            <Button Content="Lecturer Portal" 
                    Width="200" Height="40" 
                    Margin="5" 
                    Click="Lecturer_Click"/>
            <Button Content="Coordinator Portal" 
                    Width="200" Height="40" 
                    Margin="5" 
                    Click="Coordinator_Click"/>
        </StackPanel>
    </Grid>
</Window>

