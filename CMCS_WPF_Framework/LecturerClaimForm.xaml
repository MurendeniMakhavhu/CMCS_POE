<Window x:Class="CMCS_WPF_Framework.LecturerClaimForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Monthly Claim"
        Height="450" Width="600"
        Background="#f7f7f7">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Submit Monthly Claim"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Hours Worked -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Hours Worked:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHoursWorked" Width="200" Height="25"/>
            </StackPanel>

            <!-- Hourly Rate -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Hourly Rate (R):" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtHourlyRate" Width="200" Height="25"/>
            </StackPanel>

            <!-- Notes -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Notes:" Width="120" VerticalAlignment="Top"/>
                <TextBox x:Name="txtNotes" Width="300" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <!-- Upload Section -->
            <StackPanel Orientation="Horizontal" Margin="0,15">
                <TextBlock Text="Supporting Document:" Width="150" VerticalAlignment="Center"/>
                <Button Content="Upload File" Width="100" Height="30" Click="Upload_Click"/>
                <TextBlock x:Name="txtFileName" Text="No file chosen" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Submit Claim" Width="150" Height="40" Margin="5" Click="Submit_Click"/>
                <Button Content="Back" Width="100" Height="40" Margin="5" Click="Back_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
