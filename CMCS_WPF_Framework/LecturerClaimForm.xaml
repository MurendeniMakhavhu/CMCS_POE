<Window x:Class="CMCS_WPF_Framework.LecturerClaimForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="500" Width="500" Background="#f7f7f7">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Submit Monthly Claim"
                       FontSize="22" FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Lecturer Name:"/>
            <TextBox x:Name="txtLecturerName" Margin="0,0,0,10"/>

            <TextBlock Text="Hours Worked:"/>
            <TextBox x:Name="txtHours" Margin="0,0,0,10"/>

            <TextBlock Text="Hourly Rate:"/>
            <TextBox x:Name="txtRate" Margin="0,0,0,10"/>

            <TextBlock Text="Upload Supporting Document:"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Browse..." Width="100" Click="Upload_Click"/>
                <TextBlock x:Name="lblFileName" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <Button Content="Submit Claim" Height="40" Margin="0,20,0,0"
                    Click="Submit_Click"/>

            <Button Content="← Back" Height="35" Margin="0,10,0,0"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>

