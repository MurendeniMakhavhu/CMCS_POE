<Window x:Class="CMCS_WPF_Framework.LecturerPortal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Portal" Height="500" Width="700" Background="#f9f9f9">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Lecturer Portal"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Submit New Claim -->
            <Button Content="Submit New Claim"
                    Height="40" Margin="5"
                    Click="SubmitClaim_Click"/>

            <!-- View My Claims -->
            <Button Content="View My Claims"
                    Height="40" Margin="5"
                    Click="ViewMyClaims_Click"/>

            <!-- Claims Table -->
            <DataGrid x:Name="ClaimsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Height="300" Margin="0,10,0,10"
                      Visibility="Collapsed">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="80"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="80"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate}" Width="80"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Document" Binding="{Binding SupportingDocumentPath}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="← Back to Main Menu"
                    Height="40" Margin="20,40,20,0"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
