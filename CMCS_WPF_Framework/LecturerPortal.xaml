<Window x:Class="CMCS_WPF_Framework.LecturerPortal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Portal" Height="400" Width="600" Background="#f9f9f9">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Lecturer Portal"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <Button Content="Submit Claim"
                    Height="40" Margin="5"/>
            <Button Content="Upload Supporting Documents"
                    Height="40" Margin="5"/>
            <Button Content="Track Claim Status"
                    Height="40" Margin="5"/>

            <Button Content="← Back to Main Menu"
                    Height="40" Margin="20,40,20,0"
                    Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
